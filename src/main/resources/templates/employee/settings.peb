<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
    $(document).ready(function () {
        // Existing element selections
        const passwordToggleElements = $('.password-toggle');
        const passwordInputGroups = $('.password-input-group');
        const dobInput = $('#dob');
        const personalInfoTab = $('#personal-info-tab');
        const passwordTab = $('#password-tab');
        const paymentTab = $('#payment-tab');
        const subscriptionTab = $('#subscription-tab');
        const notificationTab = $('#notification-tab');

        const personalInfoSection = $('#personal-info-section');
        const passwordSection = $('#password-section');
        const paymentSection = $('#payment-section');
        const subscriptionSection = $('#subscription-section');
        const notificationSection = $('#notification-section');

        const navLinks = $('.sidebar-item');
        const themeBtn = $('.theme-btn');
        const subscriptionPlansContainer = $('#subscription-plans');
        const addPaymentMethodBtn = $('#add-payment-method-btn');
        const paymentMethodsList = $('#payment-methods-list');
        const logoutButton = $('.btn-logout'); // Select logout button by class

        function showTab(tabId) {
            activeTab = tabId;
            navLinks.removeClass('active');
            $(`#${tabId}`).addClass('active');
            personalInfoSection.hide();
            passwordSection.hide();
            paymentSection.hide();
            subscriptionSection.hide();
            notificationSection.hide();
            $(`#${tabId.replace('-tab', '-section')}`).show();
        }

        function validatePassword(password) {
            const regex = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@$!%*?&])[A-Za-z\d@$!%*?&]{8,}$/;
            return regex.test(password);
        }

        function updatePasswordStrength(password) {
            const strengthMeter = $('.password-strength-meter');
            const strengthText = $('.strength-text');
            if (!password) {
                strengthMeter.css('width', '0%').removeClass('strength-weak strength-medium strength-strong');
                strengthText.text('');
                return;
            }

            if (password.length < 8) {
                strengthMeter.css('width', '33%').addClass('strength-weak').removeClass('strength-medium strength-strong');
                strengthText.text('Weak');
            } else if (!validatePassword(password)) {
                strengthMeter.css('width', '66%').addClass('strength-medium').removeClass('strength-weak strength-strong');
                strengthText.text('Medium');
            } else {
                strengthMeter.css('width', '100%').addClass('strength-strong').removeClass('strength-weak strength-medium');
                strengthText.text('Strong');
            }
        }

        // EVENT LISTENERS

        // Tab navigation
        navLinks.on('click', function () {
            const tabId = $(this).attr('id');
            showTab(tabId);
        });


        // Password input monitoring
        passwordInputGroups.on('input', 'input[type="password"]', function () {
            const password = $(this).val();
            updatePasswordStrength(password);
        });

        // Password visibility toggle
        passwordToggleElements.on('click', function () {
            const input = $(this).siblings('input');
            const icon = $(this);
            if (input.attr('type') === 'password') {
                input.attr('type', 'text');
                icon.removeClass('bi-eye-slash').addClass('bi-eye');
            } else {
                input.attr('type', 'password');
                icon.removeClass('bi-eye').addClass('bi-eye-slash');
            }
        });

        // Date of birth input behavior
        dobInput.on('focus', function () {
            $(this).attr('type', 'date');
        }).on('blur', function () {
            if (!$(this).val()) {
                $(this).attr('type', 'text');
            }
        });

        // Form submission
        $('form').on('submit', function (e) {
            e.preventDefault();
            alert('Form submitted successfully!');
        });

        // System theme preference change listener

        // File upload button
        $(".upload-btn").on("click", function () {
            // Create an input element of type "file"
            const fileInput = document.createElement("input");
            fileInput.type = "file";
            fileInput.accept = "image/*"; // Optional: Restrict to images

            // Trigger the file input dialog
            fileInput.click();

            // Handle file selection
            fileInput.onchange = function (event) {
                const selectedFile = event.target.files[0];
                if (selectedFile) {
                    // You would typically send the file to the server here using AJAX or a form submission.
                    console.log("Selected file:", selectedFile);  // For demonstration
                    alert("File selected! See console for file details. You would now upload this.");

                    // Example of how to display the image (optional)
                    const reader = new FileReader();
                    reader.onload = function (e) {
                        // Create an image element
                        const img = document.createElement("img");
                        img.src = e.target.result;
                        img.style.maxWidth = "200px"; // Limit size

                        // Replace with actual image ID
                        $('#your-image-element-id').attr('src', e.target.result);
                    };
                    reader.readAsDataURL(selectedFile); // Read file as data URL
                }
            };
        });

        // Logout confirmation dialog - integrated into $(document).ready()
        logoutButton.on('click', function () {
            // Create the confirmation dialog
            const confirmationDialog = document.createElement('div');
            confirmationDialog.classList.add('confirmation-dialog');
            confirmationDialog.style.position = 'fixed';
            confirmationDialog.style.top = '0';
            confirmationDialog.style.left = '0';
            confirmationDialog.style.width = '100%';
            confirmationDialog.style.height = '100%';
            confirmationDialog.style.backgroundColor = 'rgba(0, 0, 0, 0.5)';
            confirmationDialog.style.display = 'flex';
            confirmationDialog.style.justifyContent = 'center';
            confirmationDialog.style.alignItems = 'center';
            confirmationDialog.style.zIndex = '1000';

            const confirmationContent = document.createElement('div');
            confirmationContent.classList.add('confirmation-content');
            confirmationContent.style.backgroundColor = 'white';
            confirmationContent.style.padding = '20px';
            confirmationContent.style.borderRadius = '5px';
            confirmationContent.style.boxShadow = '0 0 10px rgba(0, 0, 0, 0.3)';
            confirmationContent.style.maxWidth = '400px';
            confirmationContent.style.textAlign = 'center';

            confirmationContent.innerHTML = `
        <p>Are you sure you want to exit?</p>
        <div class="confirmation-buttons">
            <button class="confirm-button btn btn-danger me-2">Yes, Logout</button>
            <button class="cancel-button btn btn-secondary">Cancel</button>
        </div>
        `;

            confirmationDialog.appendChild(confirmationContent);
            document.body.appendChild(confirmationDialog);

            // Get the buttons from the dialog
            const confirmButton = confirmationContent.querySelector('.confirm-button');
            const cancelButton = confirmationContent.querySelector('.cancel-button');

            // Event listener for the Confirm button
            confirmButton.addEventListener('click', function () {
                // Simulate logout
                console.log("Logging out...");
                alert("Logout successful!");
                // Add your actual logout logic here
                // For example:
                // window.location.href = '/login'; // Redirect to login page
                // localStorage.clear(); // Clear local storage
                // document.cookie = 'token=; expires=Thu, 01 Jan 1970 00:00:00 UTC; path=/;'; // Clear cookie
                confirmationDialog.remove(); // Remove the dialog
            });

            // Event listener for the Cancel button
            cancelButton.addEventListener('click', function () {
                console.log("Logout canceled.");
                confirmationDialog.remove(); // Remove the dialog
            });
        });

        // Initialize theme and show active tab
        initTheme();
        showTab(activeTab);
    });
    document.addEventListener('DOMContentLoaded', () => {
        const themeButtons = document.querySelectorAll('.theme-item');
        const logoText = document.querySelector('.logo-text'); // Select the h1 element

        // Set theme from localStorage or default to dark
        const savedTheme = localStorage.getItem('theme') || 'dark';
        document.documentElement.setAttribute('data-bs-theme', savedTheme);

        // Update active class
        themeButtons.forEach(button => {
            if (button.getAttribute('data-bs-theme-value') === savedTheme) {
                button.classList.add('active');
            } else {
                button.classList.remove('active');
            }
        });

        // Event listeners for theme buttons
        themeButtons.forEach(button => {
            button.addEventListener('click', () => {
                const theme = button.getAttribute('data-bs-theme-value');
                document.documentElement.setAttribute('data-bs-theme', theme);
                localStorage.setItem('theme', theme);

                // Update active class
                themeButtons.forEach(btn => btn.classList.remove('active'));
                button.classList.add('active');

                // Update logo text color based on theme
                if (theme === 'dark') {
                    logoText.style.color = '#ffffff'; // Or your dark theme color
                } else {
                    logoText.style.color = '#000000'; // Or your light theme color
                }
            });
        });

        // Apply initial theme
        document.documentElement.setAttribute('data-bs-theme', savedTheme);

        // Set initial logo text color
        if (savedTheme === 'dark') {
            logoText.style.color = '#ffffff'; // Or your dark theme color
        } else {
            logoText.style.color = '#000000'; // Or your light theme color
        }
    });

</script>
