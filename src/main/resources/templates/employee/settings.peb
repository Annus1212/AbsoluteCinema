<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Get saved theme from localStorage or use default
        const savedTheme = localStorage.getItem('absolute-cinema-theme') || 'dark';
        document.body.setAttribute('data-bs-theme', savedTheme);

        // Find and mark the active theme button
        const activeThemeBtn = document.querySelector('.theme-item[data-theme-value="${savedTheme}"]');
        if (activeThemeBtn) {
            document.querySelectorAll('.theme-item').forEach(btn => {
                btn.classList.remove('active');
            });
            activeThemeBtn.classList.add('active');
        }

        // Update icon
        const themeIcon = document.querySelector('#themeToggle i');
        if (themeIcon) {
            themeIcon.className = savedTheme === 'light' ?
                'bi bi-sun-fill' : savedTheme === 'dark' ?
                    'bi bi-moon-stars-fill' : 'bi bi-circle-half';
        }

        // Add event listeners to theme buttons
        document.querySelectorAll('.theme-item').forEach(item => {
            item.addEventListener('click', function() {
                const theme = this.getAttribute('data-theme-value');

                // Save to localStorage
                localStorage.setItem('absolute-cinema-theme', theme);

                // Apply theme to body instead of documentElement
                document.body.setAttribute('data-bs-theme', theme);

                // Update icon
                if (themeIcon) {
                    themeIcon.className = theme === 'light' ?
                        'bi bi-sun-fill' : theme === 'dark' ?
                            'bi bi-moon-stars-fill' : 'bi bi-circle-half';
                }

                // Update active state
                document.querySelectorAll('.theme-item').forEach(btn => {
                    btn.classList.remove('active');
                });
                this.classList.add('active');
            });
        });

        // Rest of your JavaScript stays the same
        // ...
    });
    // Settings navigation
    document.querySelectorAll('.settings-menu-link').forEach(link => {
        link.addEventListener('click', function(e) {
            e.preventDefault();
            const targetSection = this.getAttribute('data-section');

            // Hide all sections
            document.querySelectorAll('.settings-section').forEach(section => {
                section.classList.remove('active');
            });

            // Remove active class from all links
            document.querySelectorAll('.settings-menu-link').forEach(menuLink => {
                menuLink.classList.remove('active');
            });

            // Show target section and mark link as active
            document.getElementById(targetSection).classList.add('active');
            this.classList.add('active');
        });
    });

    // Password strength meter
    document.getElementById('newPassword')?.addEventListener('input', function() {
        const password = this.value;
        const meter = document.querySelector('.strength-meter');
        const text = document.querySelector('.strength-text');

        if (!password) {
            meter.className = 'strength-meter';
            meter.style.width = '0';
            text.textContent = '';
            return;
        }

        // Simple password strength calculation
        let strength = 0;
        if (password.length > 6) strength += 1;
        if (password.length > 10) strength += 1;
        if (/[A-Z]/.test(password)) strength += 1;
        if (/[0-9]/.test(password)) strength += 1;
        if (/[^A-Za-z0-9]/.test(password)) strength += 1;

        // Update meter
        if (strength === 1) {
            meter.className = 'strength-meter very-weak';
            text.textContent = 'Very weak';
        } else if (strength === 2) {
            meter.className = 'strength-meter weak';
            text.textContent = 'Weak';
        } else if (strength === 3) {
            meter.className = 'strength-meter medium';
            text.textContent = 'Medium strength';
        } else if (strength === 4) {
            meter.className = 'strength-meter strong';
            text.textContent = 'Strong';
        } else if (strength === 5) {
            meter.className = 'strength-meter very-strong';
            text.textContent = 'Very strong';
        }
    });

    // Work status toggle
    document.getElementById('workStatusToggle')?.addEventListener('change', function() {
        const statusText = document.querySelector('.status-text');
        if (this.checked) {
            statusText.textContent = 'Currently Available for Work';
            statusText.className = 'status-text status-online';
        } else {
            statusText.textContent = 'Currently Unavailable';
            statusText.className = 'status-text status-offline';
        }
    });

    // Day availability toggle
    document.querySelectorAll('.schedule-day .form-check-input').forEach(checkbox => {
        checkbox.addEventListener('change', function() {
            const timeSelects = this.closest('.schedule-controls').querySelectorAll('select');
            timeSelects.forEach(select => {
                select.disabled = !this.checked;
            });
        });
    });
</script>
