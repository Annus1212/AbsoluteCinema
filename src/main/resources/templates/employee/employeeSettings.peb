<!-- Scripts -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/js/bootstrap.bundle.min.js"></script>
<script>
    // Theme toggle functionality
    document.addEventListener('DOMContentLoaded', () => {
        const themeButtons = document.querySelectorAll('.theme-item');

        // Set theme from localStorage or default to dark
        const savedTheme = localStorage.getItem('theme') || 'dark';
        document.documentElement.setAttribute('data-bs-theme', savedTheme);

        // Update active class
        themeButtons.forEach(button => {
            if (button.getAttribute('data-bs-theme-value') === savedTheme) {
                button.classList.add('active');
            } else {
                button.classList.remove('active');
            }
        });

        // Event listeners for theme buttons
        themeButtons.forEach(button => {
            button.addEventListener('click', () => {
                const theme = button.getAttribute('data-bs-theme-value');
                document.documentElement.setAttribute('data-bs-theme', theme);
                localStorage.setItem('theme', theme);

                // Update active class
                themeButtons.forEach(btn => btn.classList.remove('active'));
                button.classList.add('active');
            });
        });

        document.querySelector('.edit-pic-btn').addEventListener('click', function() {
            const input = document.createElement('input');
            input.type = 'file'; input.accept = 'image/*';
            input.onchange = e => {
                const file = e.target.files[0];
                if (file) {
                    const reader = new FileReader();
                    reader.onload = ev => {
                        const pic = document.querySelector('.profile-pic');
                        pic.innerHTML = '';
                        pic.style.backgroundImage = `url(${ev.target.result})`; // Corrected template literal
                    };
                    reader.readAsDataURL(file);
                }
            };
            input.click();
        });

        const editButtons = document.querySelectorAll('.edit-btn');

        editButtons.forEach(button => {
            button.addEventListener('click', function() {
                const target = this.dataset.target;
                const displayElement = document.getElementById(`${target}-display`);
                const editElement = document.getElementById(`${target}-edit`);

                if (displayElement && editElement) {
                    displayElement.style.display = 'none';
                    editElement.style.display = 'inline-block';
                    editElement.focus();
                }
            });
        });

        document.querySelectorAll('input[id$="-edit"]').forEach(input => {
            input.addEventListener('blur', function() {
                const target = this.id.replace('-edit', '');
                const displayElement = document.getElementById(`${target}-display`);
                const editElement = document.getElementById(`${target}-edit`);

                if (displayElement && editElement) {
                    displayElement.textContent = this.value; // Update displayed value
                    displayElement.style.display = 'inline-block';
                    editElement.style.display = 'none';
                }
            });

            // Optional: Handle Enter key for saving
            input.addEventListener('keypress', function(event) {
                if (event.key === 'Enter') {
                    this.blur(); // Trigger the blur event to save
                }
            });
        });

        document.querySelector('.btn-logout').addEventListener('click', () => {
            if (confirm('Are you sure you want to logout?')) alert('Logged out successfully!');
        });
    });
</script>
