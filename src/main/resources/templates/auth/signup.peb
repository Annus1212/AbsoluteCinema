<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Absolute Cinema - Cinema Management System</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&family=Playfair+Display:wght@700;800&display=swap');
        
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Montserrat', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            background-color: #0a0a10;
        }
        
        .container {
            display: flex;
            width: 85vw;
            height: 85vh;
            max-width: 1200px;
            max-height: 700px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.4), 0 15px 30px rgba(0, 0, 0, 0.2);
            border-radius: 20px;
            overflow: hidden;
            position: relative;
        }
        
        .signup-form {
            flex: 1;
            background-color: #141620;
            padding: 5% 8%;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            position: relative;
            z-index: 1;
            text-align: center;
        }
        
        .welcome-section {
            flex: 1.5;
            background: linear-gradient(135deg, #722ed1, #1677ff, #165dff);
            padding: 10%;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            position: relative;
            overflow: hidden;
            transition: all 0.5s ease;
        }
        
        .welcome-section:hover {
            background: linear-gradient(135deg, #7b36d7, #2684ff, #2067ff);
        }
        
        .bubble {
            position: absolute;
            border-radius: 50%;
            opacity: 0.6;
            transition: all 0.8s ease;
        }
        
        .container:hover .bubble {
            transform: scale(1.1) translateY(-10px);
        }
        
        .bubble:nth-child(1) {
            top: 15%;
            right: 20%;
            width: 180px;
            height: 180px;
            background: linear-gradient(135deg, #9e68ff, #6942ff);
            filter: blur(2px);
        }
        
        .bubble:nth-child(2) {
            bottom: 20%;
            left: 10%;
            width: 140px;
            height: 140px;
            background: linear-gradient(135deg, #ff9a9e, #ff6a88);
            filter: blur(2px);
        }
        
        .bubble:nth-child(3) {
            top: 60%;
            right: 15%;
            width: 100px;
            height: 100px;
            background: linear-gradient(135deg, #ffcc70, #ff9a6c);
            filter: blur(2px);
        }
        
        h2 {
            margin-bottom: 30px;
            color: #ffffff;
            font-size: 42px;
            font-weight: 600;
            font-family: 'Playfair Display', serif;
            text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);
        }
        
        .logo {
            margin-bottom: 20px;
            font-size: 28px;
            font-weight: bold;
            background: linear-gradient(to right, #722ed1, #1677ff);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            letter-spacing: 1.5px;
            font-family: 'Playfair Display', serif;
            position: relative;
            display: inline-block;
        }
        
        .logo::after {
            content: '';
            position: absolute;
            width: 40px;
            height: 3px;
            background: linear-gradient(to right, #722ed1, #1677ff);
            bottom: -10px;
            left: 50%;
            transform: translateX(-50%);
        }
        
        .form-group {
            margin-bottom: 20px;
            position: relative;
        }
        
        .form-control {
            width: 100%;
            padding: 14px 20px 14px 45px;
            border: 1px solid #32343e;
            border-radius: 10px;
            font-size: 16px;
            outline: none;
            transition: all 0.3s;
            background-color: #1e2130;
            color: #e4e4e4;
            height: 50px;
        }
        
        .form-icon {
            position: absolute;
            left: 18px;
            top: 50%;
            transform: translateY(-50%);
            color: #606273;
            font-size: 16px;
        }
        
        .form-control::placeholder {
            color: #606273;
            font-size: 16px;
        }
        
        .form-control:focus {
            border-color: #722ed1;
            box-shadow: 0 0 0 2px rgba(114, 46, 209, 0.2);
        }
        
        .form-control:focus + .form-icon {
            color: #722ed1;
        }
        
        .btn {
            width: 100%;
            border: none;
            border-radius: 50px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
            text-transform: uppercase;
            letter-spacing: 2px;
            position: relative;
            overflow: hidden;
            height: 54px;
            font-size: 16px;
        }
        
        .btn-primary {
            background: linear-gradient(to right, #722ed1, #1677ff);
            color: white;
            box-shadow: 0 5px 20px rgba(114, 46, 209, 0.4);
        }
        
        .btn-primary:hover {
            box-shadow: 0 8px 25px rgba(114, 46, 209, 0.6);
            transform: translateY(-2px);
        }
        
        .welcome-content {
            text-align: center;
            color: white;
            position: relative;
            z-index: 2;
        }
        
        .welcome-content h2 {
            font-size: 37px;
            margin-bottom: 15px;
            color: #fff;
        }
        
        .welcome-content p {
            margin-bottom: 10px;
            font-size: 18px;
            line-height: 1.6;
            opacity: 0.9;
        }
        
        .cinema-quote {
            margin-top: 30px;
            font-style: italic;
            font-size: 17px;
            line-height: 1.6;
            opacity: 0.95;
            max-width: 90%;
            padding: 15px;
            border-left: 3px solid rgba(255, 255, 255, 0.5);
        }
        
        .signup-link {
            text-align: center;
            margin-top: 18px;
            color: #6c7293;
            font-size: 15px;
        }
        
        .signup-link a {
            color: #722ed1;
            text-decoration: none;
            margin-left: 5px;
            font-weight: 500;
            transition: all 0.3s;
        }
        
        .signup-link a:hover {
            color: #1677ff;
            text-decoration: underline;
        }
        
        .form-content {
            flex: 1;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }
        
        .form-footer {
            margin-top: 20px;
            margin-bottom: 15px;
        }
        
        /* Step indicator styling */
        .steps-indicator {
            display: flex;
            justify-content: center;
            margin-bottom: 30px;
        }
        
        .step {
            width: 12px;
            height: 12px;
            border-radius: 50%;
            background-color: #32343e;
            margin: 0 6px;
            transition: all 0.3s;
        }
        
        .step.active {
            background: linear-gradient(to right, #722ed1, #1677ff);
            width: 30px;
            border-radius: 5px;
        }
        
        /* Form step visibility */
        .form-step {
            display: none;
            opacity: 0;
            transform: translateY(20px);
            transition: all 0.5s ease;
        }
        
        .form-step.active {
            display: block;
            opacity: 1;
            transform: translateY(0);
        }
        
        /* Error message styling */
        #error-message {
            color: #ff5a5a;
            margin-bottom: 20px;
            padding: 10px;
            border-radius: 6px;
            font-size: 14px;
            background-color: rgba(255, 90, 90, 0.1);
            display: none;
        }

        #prevBtn {
            background: transparent;
            border: 2px solid #722ed1;
            color: #722ed1;
            margin-top: 15px;
        }

        @media (max-width: 768px) {
            .container {
                flex-direction: column;
                width: 95vw;
                height: auto;
            }
            
            .welcome-section {
                padding: 40px 20px;
            }
            
            .signup-form {
                padding: 40px 20px;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Welcome Section (Blue Part) -->
        <div class="welcome-section">
            <div class="bubble"></div>
            <div class="bubble"></div>
            <div class="bubble"></div>
            
            <div class="welcome-content">
                <h2>Join Absolute Cinema</h2> 
                <div class="cinema-quote">
                    "Cinema is a mirror by which we often see ourselves. Through the silver screen, we connect with our emotions, dreams, and the stories that shape our lives."
                </div>
                <br>
                <p>Sign Up and Experience the Best of Cinema!</p>
            </div>
        </div>
        
        <!-- Signup Form (Black Part) -->
        <div class="signup-form">
            <div class="form-content">
                <div class="logo">ABSOLUTE CINEMA</div>
                
                <!-- Step indicators -->
                <div class="steps-indicator">
                    <div class="step step-1 active"></div>
                    <div class="step step-2"></div>
                </div>
                
                <!-- Error message area -->
                <div id="error-message"></div>
                
                <form id="signup-form" method="POST" action="/auth/register">
                    <input type="hidden" name="{{_csrf.parameterName}}" value="{{_csrf.token}}" />
                    
                    <!-- Step 1: Basic Information -->
                    <div class="form-step step-1 active">
                        <div class="form-group">
                            <input type="text" name="username" id="username" class="form-control" placeholder="Username" required>
                            <i class="fas fa-user form-icon"></i>
                        </div>
                        
                        <div class="form-group">
                            <input type="text" name="firstName" id="firstName" class="form-control" placeholder="First Name" required>
                            <i class="fas fa-user form-icon"></i>
                        </div>
                        
                        <div class="form-group">
                            <input type="text" name="lastName" id="lastName" class="form-control" placeholder="Last Name" required>
                            <i class="fas fa-user form-icon"></i>
                        </div>
                        
                        <div class="form-group">
                            <input type="email" name="email" id="email" class="form-control" placeholder="Email" required>
                            <i class="fas fa-envelope form-icon"></i>
                        </div>
                    </div>
                    
                    <!-- Step 2: Password -->
                    <div class="form-step step-2">
                        <div class="form-group">
                            <input type="password" name="password" id="password" class="form-control" placeholder="Create Password" required>
                            <i class="fas fa-lock form-icon"></i>
                        </div>
                        
                        <div class="form-group">
                            <input type="password" id="confirmPassword" class="form-control" placeholder="Confirm Password" required>
                            <i class="fas fa-lock form-icon"></i>
                        </div>
                    </div>
                </form>
            </div>
            
            <div class="form-footer">
                <!-- Navigation buttons -->
                <button type="button" id="nextBtn" class="btn btn-primary">CONTINUE</button>
                <button type="button" id="prevBtn" class="btn" style="display: none;">BACK</button>
                <button type="button" id="submitBtn" class="btn btn-primary" style="display: none; margin-top: 15px;">SIGN UP</button>
                
                <div class="signup-link">
                    Already have an account? <a href="signin.html">Sign In</a>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Elements
        const form = document.getElementById('signup-form');
        const nextBtn = document.getElementById('nextBtn');
        const prevBtn = document.getElementById('prevBtn');
        const submitBtn = document.getElementById('submitBtn');
        const errorMessage = document.getElementById('error-message');
        
        // Form steps
        const step1 = document.querySelector('.form-step.step-1');
        const step2 = document.querySelector('.form-step.step-2');
        
        // Step indicators
        const stepIndicator1 = document.querySelector('.step.step-1');
        const stepIndicator2 = document.querySelector('.step.step-2');
        
        // Form fields
        const usernameField = document.getElementById('username');
        const firstNameField = document.getElementById('firstName');
        const lastNameField = document.getElementById('lastName');
        const emailField = document.getElementById('email');
        const passwordField = document.getElementById('password');
        const confirmPasswordField = document.getElementById('confirmPassword');
        
        // Move to step 2
        nextBtn.addEventListener('click', function() {
            // Validate step 1 fields
            if (!validateStep1()) {
                return;
            }
            
            // Move to step 2
            step1.classList.remove('active');
            step2.classList.add('active');
            
            // Update indicators
            stepIndicator1.classList.remove('active');
            stepIndicator2.classList.add('active');
            
            // Update buttons
            nextBtn.style.display = 'none';
            prevBtn.style.display = 'block';
            submitBtn.style.display = 'block';
        });
        
        // Move back to step 1
        prevBtn.addEventListener('click', function() {
            step2.classList.remove('active');
            step1.classList.add('active');
            
            stepIndicator2.classList.remove('active');
            stepIndicator1.classList.add('active');
            
            nextBtn.style.display = 'block';
            prevBtn.style.display = 'none';
            submitBtn.style.display = 'none';
        });
        
        // Submit form
        submitBtn.addEventListener('click', function(e) {
            if (validateStep2()) {
                form.submit();
            }
        });
        
        // Step 1 validation
        function validateStep1() {
            // Reset error message
            errorMessage.style.display = 'none';
            
            // Check if fields are empty
            if (!usernameField.value.trim()) {
                showError('Please enter a username');
                return false;
            }
            
            if (!firstNameField.value.trim()) {
                showError('Please enter your first name');
                return false;
            }
            
            if (!lastNameField.value.trim()) {
                showError('Please enter your last name');
                return false;
            }
            
            // Validate email format
            if (!emailField.value.trim() || !emailField.value.includes('@')) {
                showError('Please enter a valid email address');
                return false;
            }
            
            return true;
        }
        
        // Step 2 validation
        function validateStep2() {
            // Reset error
            errorMessage.style.display = 'none';
            
            // Check if passwords are entered
            if (!passwordField.value) {
                showError('Please enter a password');
                return false;
            }
            
            // Check if passwords match
            if (passwordField.value !== confirmPasswordField.value) {
                showError('Passwords do not match');
                return false;
            }
            
            
            return true;
        }
        
        // Display error message
        function showError(message) {
            errorMessage.textContent = message;
            errorMessage.style.display = 'block';
        }
    </script>
</body>
</html>