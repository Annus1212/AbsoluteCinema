<!-- Scripts -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/js/bootstrap.bundle.min.js"></script>
<script>
    // Show elements when they come into view
    document.addEventListener("DOMContentLoaded", function() {
        const fadeElements = document.querySelectorAll('.fadeIn');
        
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.opacity = 1;
                    entry.target.style.transform = 'translateY(0)';
                }
            });
        });
        
        fadeElements.forEach(element => {
            observer.observe(element);
        });
        
        // Tab navigation
        const tabs = document.querySelectorAll('.loyalty-tab');
        const tabContents = document.querySelectorAll('.tab-content');
        
        tabs.forEach(tab => {
            tab.addEventListener('click', () => {
                const targetTab = tab.getAttribute('data-tab');
                
                // Update active tab
                tabs.forEach(t => t.classList.remove('active'));
                tab.classList.add('active');
                
                // Show target content
                tabContents.forEach(content => {
                    content.style.display = 'none';
                });
                document.getElementById(targetTab + '-tab').style.display = 'block';
            });
        });
        
        // Reward redemption
        const redeemButtons = document.querySelectorAll('.redeem-btn:not([disabled])');
        const redemptionModal = new bootstrap.Modal(document.getElementById('redemptionModal'));
        
        redeemButtons.forEach(button => {
            button.addEventListener('click', () => {
                const rewardCard = button.closest('.reward-card');
                const rewardTitle = rewardCard.querySelector('.reward-title').textContent;
                const pointsText = rewardCard.querySelector('.reward-points').textContent;
                const pointsValue = parseInt(pointsText.replace(/[^0-9]/g, ''));
                const remainingPoints = 1250 - pointsValue;
                
                document.getElementById('rewardName').textContent = rewardTitle;
                document.getElementById('rewardPoints').textContent = pointsValue + ' points';
                document.getElementById('remainingPoints').textContent = remainingPoints;
                
                redemptionModal.show();
            });
        });
        
        // Copy promo codes
        const copyButtons = document.querySelectorAll('.copy-btn');
        
        copyButtons.forEach(button => {
            button.addEventListener('click', () => {
                const promoCode = button.closest('.promo-content').querySelector('.promo-code').textContent;
                navigator.clipboard.writeText(promoCode);
                
                const originalText = button.textContent;
                button.textContent = 'Copied!';
                button.style.backgroundColor = '#8a2be2';
                button.style.color = 'white';
                
                setTimeout(() => {
                    button.textContent = originalText;
                    button.style.backgroundColor = '';
                    button.style.color = '';
                }, 2000);
            });
        });
        
        // Theme toggling
        const storedTheme = localStorage.getItem('theme') || 'dark';
        document.documentElement.setAttribute('data-bs-theme', storedTheme);
        
        const themeItems = document.querySelectorAll('.theme-item');
        themeItems.forEach(item => {
            if (item.getAttribute('data-bs-theme-value') === storedTheme) {
                item.classList.add('active');
            } else {
                item.classList.remove('active');
            }
            
            item.addEventListener('click', () => {
                const theme = item.getAttribute('data-bs-theme-value');
                document.documentElement.setAttribute('data-bs-theme', theme);
                localStorage.setItem('theme', theme);
                
                themeItems.forEach(t => t.classList.remove('active'));
                item.classList.add('active');
                
                // Update theme toggle icon
                const themeIcon = document.querySelector('#themeToggle i');
                if (theme === 'light') {
                    themeIcon.className = 'bi bi-sun-fill';
                } else if (theme === 'dark') {
                    themeIcon.className = 'bi bi-moon-stars-fill';
                } else {
                    themeIcon.className = 'bi bi-circle-half';
                }
            });
        });
    });
</script>
