  </div>

  <section class="container slider-section">
    <div class="custom-box border rounded-3 p-3 position-relative">
      <button class="btn btn-dark position-absolute top-50 start-0 translate-middle-y" onclick="slideLeft()">◀</button>
      <div id="slider" class="d-flex overflow-hidden">
        <a href="#"><img src="/images/maulajatt.jpeg" class="slider-img" alt="Maula Jatt"></a>
        <a href="#"><img src="/images/sonic2.jpeg" class="slider-img" alt="Sonic 2"></a>
        <a href="#"><img src="/images/nun.jpeg" class="slider-img" alt="The Nun"></a>
        <a href="#"><img src="/images/red one.jpeg" class="slider-img" alt="Red One"></a>
        <a href="#"><img src="/images/salaar.jpeg" class="slider-img" alt="Salaar"></a>
        <a href="#"><img src="/images/missionimposible.jpeg" class="slider-img" alt="Mission Impossible"></a>
        <a href="#"><img src="/images/fredy night.jpeg" class="slider-img" alt="Freddy Night"></a>
      </div>
      <button class="btn btn-dark position-absolute top-50 end-0 translate-middle-y" onclick="slideRight()">▶</button>
    </div>
  </section>
