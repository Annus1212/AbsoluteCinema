{% block content %}
    <section class="banner-section mx-auto mt-3">
    <img src="/images/daredevil.jpg" class="banner-img active" alt="Daredevil">
    <img src="/images/thunderbolt.jpg" class="banner-img" alt="Thunderbolt">
    <img src="/images/snowwhite.jpg" class="banner-img" alt="Snow White">
  </section>

  <div class="container my-4">
